@model eRNI.Models.Owner

@{
    ViewBag.Title = "Edycja podmiotu";
}

<h2><img src="~/Images/edit.png" height="64" width="64" /> Edycja podmiotu</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="@Url.Action("Details", "Localizations", new { id = ViewBag.localizationID })"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Powrót</a>

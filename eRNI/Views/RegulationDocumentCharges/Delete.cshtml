@model eRNI.Models.RegulationDocumentCharge

@{
    ViewBag.Title = "Delete";
}

<h3><img src="~/Images/delete.png" height="50" width="50" /> Usunięcie opłat</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="@Url.Action("Details", "Regulations", new { id = Model.regulationDocuments.regulationID })"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Powrót</a>
    </div>
    <div class="panel-body">
        <div style="color:crimson; text-align:center; font-size:larger">Czy na pewno chcesz usunąć <strong>wszystkie dane</strong> związane z tą opłatą ?</div>

        <div>
            <dl class="dl-horizontal">
             
                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentChargeDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentChargeDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentChargeTitle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentChargeTitle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentSellerName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentSellerName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentFee)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentFee)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentTax)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentTax)%
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentCostAdditionalInfo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentCostAdditionalInfo)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Usuń" class="btn btn-primary btn-lg" />
                </div>
            }
        </div>
    </div>
</div>
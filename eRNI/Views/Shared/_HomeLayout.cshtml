<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — eRNI</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                    @Html.ActionLink("eRNI", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Informacje", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>

                    <li class="dropdown">
                        <a href="@Url.Action("Index", "Home", new { area = "" , id = ""})" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Przegląd <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Projekty ", "Index", "Projects")</li>
                            <li style="color:#ff006e; text-align:center; font-weight:bold" class="dropdown-header">Składowe projektów</li>
                            <li>@Html.ActionLink("Lokalizacje ", "Index", "Localizations")</li>
                            <li>@Html.ActionLink("Dokumenty kluczowe ", "Index", "KeyDocuments")</li>
                            <li>@Html.ActionLink("Korespondencja ", "Index", "ProjectCorrespondence")</li>
                            <li>@Html.ActionLink("Podmioty ", "Index", "Owners")</li>
                            <li>@Html.ActionLink("Regulacje ", "Index", "Regulations")</li>
                            <li>@Html.ActionLink("Dokumenty regulacyjne ", "Index", "RegulationDocuments")</li>
                            <li>@Html.ActionLink("Faktury ", "Index", "Invoices")</li>
                            <li>@Html.ActionLink("OT/PT ", "Index", "PropertyDocuments")</li>
                        </ul>
                    </li>
                </ul>
               @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
        <hr style="background-color: #808080; height: 1px;" />
        <footer>
            <p style="font-size: larger"><span class="label label-default">eRNI</span> - Elektroniczny Rejestr Nieruchomości Inwestycyjnych</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
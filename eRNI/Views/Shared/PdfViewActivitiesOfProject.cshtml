@model IEnumerable<eRNI.Models.Activity>

@{
    Layout = null;
    ViewBag.Title = "Czynności";
    var id = ViewBag.projectID;
    string timeStamp = String.Format("{0:dddd, dd MMMM yyyy}", DateTime.Now.Date);
}
<link href="~/Content/Pdf.css" rel="stylesheet" />


<h3>
    <img src="~/Images/working.png" height="40" width="40" /> @ViewBag.Title
    <span style="color:red; font-weight:bolder">(@id)</span><span style="color:darkblue; font-weight:bolder"> @Model.Where(p => p.projectID == @id).Select(s => s.project.projectSapNo).FirstOrDefault()</span>
</h3>


<table>
    <thead>
        <tr>
            <th style="width:90px; text-align:center">@Html.DisplayNameFor(model => model.actionDate)</th>
            <th>@Html.DisplayNameFor(model => model.actionDescription)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.actionDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.actionDescription)
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="color:rgba(48, 21, 2, 1.00); float:right; margin-top:10px"> @timeStamp</div>
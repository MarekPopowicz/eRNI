@model eRNI.Models.Activity

@{
    ViewBag.Title = "Usunięcie czynności";
}

<h2><img src="~/Images/delete.png" height="64" width="64" /> Usunięcie czynności</h2>


<div class="panel panel-default">
    <div class="panel-heading">
        <a href="@Url.Action("Details", "Projects", new { id = Model.projectID })"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Powrót</a>
    </div>
    <div class="panel-body">
        <div style="color:crimson; text-align:center; font-size:larger">Czy na pewno chcesz usunąć <strong>wszystkie dane</strong> związane z tą czynnością ?</div>

        <div>

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.actionDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.actionDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.actionDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.actionDescription)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Usuń" class="btn btn-primary btn-lg" />
                </div>
            }
        </div>
    </div>
</div>
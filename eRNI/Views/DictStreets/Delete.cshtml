@model eRNI.Models.Street

<style>
    .modal { overflow-y: auto; }
    .modal-noscrollbar { margin-right: 0 !important; }
</style>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title"><img src="~/Images/street.png" height="50" width="50" /> Usunięcie ulicy</h4>
</div>

@using (Html.BeginForm("Delete", "DictStreets"))
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div style="color:crimson; text-align:center; font-size:larger">Czy na pewno chcesz usunąć tą <strong>nazwę</strong> ulicy ?</div>
        <div>
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.streetName)</dt>
                <dd>@Html.DisplayFor(model => model.streetName)</dd>
            </dl>
        </div>
    </div>

    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Usuń" class="btn btn-primary btn-sm" />
                <button class="btn btn-warning btn-sm" data-dismiss="modal">Anuluj</button>
            </div>
        </div>
    </div>
}
<script src="~/Scripts/modal-scrollbar-remove.js"></script>

@model IEnumerable<eRNI.Models.Street>

@{
    ViewBag.Title = "Spis ulic";
}

<link href="~/Content/scrollable-table.css" rel="stylesheet" />

<h3><img src="~/Images/list.png" height="50" width="50" /> Ulice</h3>

@using (Html.BeginForm("Index", "DictStreets", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{ 
    <div style="position: absolute;  float:right; top: 75px; right: 100px; display:flex; " >
        <input name="searchTerm" type="text" class="form-control" id="txtSearch" placeholder="Ulica" >&nbsp; 
        <button type="submit" class="btn btn-primary glyphicon glyphicon-search"  data-toggle="tooltip" data-placement="bottom" title = "Znajdź ulicę"></button>
    </div>
}

       
<div class="panel panel-default">
    <div class="panel-heading">
     
    <a href = "@Url.Action("Create","DictStreets")" data-modal = "" data-toggle="tooltip" data-placement="top" title="Dodaj ulicę" ><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Dodaj</a>
        <span style="float:right">Ilość: @Model.Count() szt.</span>
    </div>
    <div class="panel-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.streetName)
                    </th>
                    <th id="actions">Akcja</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.streetName)
                        </td>
                        <td style="text-align:right">
                           @Html.ActionLink(" ", "Edit", "DictStreets", new { id = item.streetID }, new { @class = "glyphicon glyphicon-edit",  data_toggle = "tooltip", data_placement = "top", title = "Edytuj ulicę", style = "font-size: 1.3em", @data_modal = "" })
                           @Html.ActionLink(" ", "Delete", "DictStreets", new { id = item.streetID }, new { @class = "glyphicon glyphicon-trash", data_toggle = "tooltip", data_placement = "top", title = "Usuń ulicę", style = "font-size: 1.3em", @data_modal = "" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

  <!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

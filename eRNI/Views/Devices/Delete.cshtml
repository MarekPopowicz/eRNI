@model eRNI.Models.Device

@{
    ViewBag.Title = "Usunięcie urządzenia";
}

<h3><img src="~/Images/delete.png" height="64" width="64" /> Usunięcie urządzenia</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="@Url.Action("Details", "Localizations", new { id = ViewBag.localizatonID })"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Powrót</a>
    </div>
    <div class="panel-body">
        <div style="color:crimson; text-align:center; font-size:larger">Czy na pewno chcesz usunąć <strong>wszystkie dane</strong> związane z tym urządzeniem ?</div>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.deviceCategory.deviceCategoryName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.deviceCategory.deviceCategoryName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.localization.localizationLandRegister)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.localization.localizationLandRegister)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.deviceLenght)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.deviceLenght)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.deviceWidth)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.deviceWidth)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.deviceVoltage)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.deviceVoltage)
                </dd>

            </dl>
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Usuń" class="btn btn-primary btn-lg" />
            </div>
        }
    </div>
</div>

@model eRNI.Models.ProjectCorrespondence

@{
    ViewBag.Title = "Delete";
}

<h3><img src="~/Images/delete.png" height="50" width="50" /> Usunięcie korespondencji <span style="color:#ff006e; font-weight:bold">@Model.project.projectSapNo</span></h3>


<div class="panel panel-default">
    <div class="panel-heading">
        <a href="@Url.Action("Index")"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Powrót</a>
    </div>
    <div class="panel-body">
        <div style="color:crimson; text-align:center; font-size:larger">Czy na pewno chcesz usunąć <strong>wszystkie dane</strong> związane z tą korespondencją ?</div>

        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.projectCorrespondenceDirection)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.projectCorrespondenceDirection)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.projectCorrespondenceSender)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.projectCorrespondenceSender)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.projectCorrespondenceDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.projectCorrespondenceDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.projectCorrespondenceSign)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.projectCorrespondenceSign)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.projectCorrespondenceSubject)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.projectCorrespondenceSubject)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.projectCorrespondenceObtainment)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.projectCorrespondenceObtainment)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Usuń" class="btn btn-primary btn-lg" />
                </div>
            }
        </div>
    </div>
</div>

@model eRNI.Models.Invoice

@{
    ViewBag.Title = "Usunięcie faktury";
}
<h2><img src="~/Images/delete.png" height="64" width="64" /> Usunięcie faktury</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="@Url.Action("Details", "Projects", new { id = Model.projectID })"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Powrót</a>
    </div>
    <div class="panel-body">
        <div style="color:crimson; text-align:center; font-size:larger">Czy na pewno chcesz usunąć <strong>wszystkie dane</strong> związane z tą fakturą ?</div>
        <div>

            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceAdditionalInfo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceAdditionalInfo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceIssueDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceIssueDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceNettoValue)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceNettoValue)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceTax)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceTax)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceNo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceNo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceSapRegisterNo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceSapRegisterNo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceSapRegistrationDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceSapRegistrationDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceSellerName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceSellerName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.invoiceTitle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.invoiceTitle)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Usuń" class="btn btn-primary btn-lg" />
                </div>
            }
        </div>
    </div>
</div>

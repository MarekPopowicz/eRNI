@model eRNI.Models.Regulation

@{
    ViewBag.Title = "Nowa regulacja";
}

<h3><img src="~/Images/add.png" height="50" width="50" /> Nowa regulacja</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="@Url.Action("Details", "Devices", new { id = ViewBag.devID })"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Powrót</a>
    </div>

    <div class="panel-body">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.DropDownList("deviceID", null, htmlAttributes: new { @class = "form-control hidden " })

               
                         <div class="form-group">
                            @Html.LabelFor(model => model.regulationCategoryID, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("regulationCategoryID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.regulationCategoryID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.regulationCost, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-1">
                                @Html.EditorFor(model => model.regulationCost, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.regulationCost, "", new { @class = "text-danger" })
                            </div>
                            <p class="text-left" style="padding-top:5px; color:grey">(Kwota wynagrodzenia dla właściciela nieruchomości)</p>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.regulationSapElement, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-1">
                                @Html.EditorFor(model => model.regulationSapElement, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.regulationSapElement, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(model => model.regulationAdditionalInfo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.regulationAdditionalInfo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.regulationAdditionalInfo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Zapisz" class="btn btn-primary btn-lg" />
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

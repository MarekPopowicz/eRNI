@model eRNI.Models.RegulationDocument

@{
    ViewBag.Title = "Usunięcie dokumentu";
}

<h3><img src="~/Images/delete.png" height="50" width="50" /> Usunięcie dokumentu</h3>

<div class="panel panel-default">
    <div class="panel-heading">
        <a href="@Url.Action("Details", "Regulations", new { id = Model.regulationID })"><span class="glyphicon glyphicon-circle-arrow-left" aria-hidden="true"></span> Powrót</a>
    </div>
    <div class="panel-body">
        <div style="color:crimson; text-align:center; font-size:larger">Czy na pewno chcesz usunąć <strong>wszystkie dane</strong> związane z tym dokumentem ?</div>

        <div>
            <dl class="dl-horizontal">
               
                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentDate)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentDate)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentSignature)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentSignature)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentSource)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentSource)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.regulationDocumentType)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.regulationDocumentType)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Usuń" class="btn btn-primary btn-lg" />
                </div>
            }
        </div>
    </div>
</div>
